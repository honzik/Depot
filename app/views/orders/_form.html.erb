<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.body') %></h2>
      <p><%= t('errors.template.header', :count => @order.errors.count) %></p>
      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, t('.name') %><br />
    <%= f.text_field :name, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :address, t('.address_html') %><br />
    <%= f.text_area :address, :rows=>3, :cols=>40 %>
  </div>
  <div class="field">
    <%= f.label :email, t('.email_html') %><br />
    <%= f.email_field :email, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :pay_type, t('.pay_type_html') %><br />
    <%= f.select(:pay_type, Order.get_payment_types, :prompt => t('.pay_prompt_html')) %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
